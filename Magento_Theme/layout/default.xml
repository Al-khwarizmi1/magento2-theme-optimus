<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <!-- Add your removes here -->
        <remove name="paypal.partner.right.logo" />
        <remove name="bml.right.logo" />
        <remove name="bml.center.logo" />
        <remove name="wish-list-link" />
        <remove name="customer-account-navigation-billing-agreements-link" />
        <remove name="customer-account-navigation-downloadable-products-link" />
        <remove name="sale.reorder.sidebar" />
        <remove name="report.bugs" />
        <remove name="footer_links" />

        <!-- Head (containing meta tags and favicons -->
        <referenceBlock name="head.additional">
            <block class="Magento\Framework\View\Element\Template" name="opengraph.general" template="Magento_Theme::html/opengraph/general.phtml" />
            <block class="Magento\Framework\View\Element\Template" name="favicons" template="Magento_Theme::html/favicons/favicons.phtml" />
        </referenceBlock>

        <referenceContainer name="header.panel">
            <block class="Magento\Framework\View\Element\Template" name="store.usp" template="Magento_Theme::html/store-usp.phtml" />
        </referenceContainer>
        
        <!-- Footer (containing user content, newsletter and social -->
        <referenceContainer name="footer" htmlClass="footer content colm-grid">
            <block class="Magento\Catalog\Block\Navigation" name="footer.sitemap" template="Magento_Catalog::navigation/sitemap-one-level.phtml" before="footer.user.content" />
            <block class="Magento\Theme\Block\Html\Footer" name="footer.user.content" template="html/footer-user-content.phtml" before="form.subscribe" />
            <block class="Magento\Newsletter\Block\Subscribe" name="form.subscribe" as="subscribe" after="-" template="subscribe.phtml"/>
        </referenceContainer>

        <!-- After footer (containing copyright, address, payment and languages -->
        <container name="after.footer" htmlTag="div" htmlClass="page bottom" after="footer">
            <container name="after.footer.content" htmlTag="div" htmlClass="footer content colm-grid">
                <container name="about.store" htmlTag="div" htmlClass="about-store colm1-2">
                    <block class="Magento\Theme\Block\Html\Footer" name="copyright" template="html/copyright.phtml"/>
                    <block class="Magento\Framework\View\Element\Template" name="address" template="Magento_Theme::html/address.phtml" />
                </container>
                <container name="payment.methods" htmlTag="div" htmlClass="payment-methods colm1-2">
                    <block class="Magento\Theme\Block\Html\Footer" name="payment.icons" template="html/payment.phtml"/>
                </container>
                <block class="Magento\Store\Block\Switcher" name="store_language_footer" template="Magento_Theme::html/languages_footer.phtml" after="-" />
            </container>
        </container>
    </body>
</page>
